    <script>

        document.addEventListener('DOMContentLoaded', function() 
            {
                // Hiển thị thông báo từ TempData
                @if (TempData["SuccessMessage"] != null)
                {
                    <text>
                                    showNotification('success', '@Html.Raw(TempData["SuccessMessage"])');
                    </text>
                }
                @if (TempData["ErrorMessage"] != null)
