@model IEnumerable<WebTimNguoiThatLac.Models.TimNguoi>
@{
    ViewData["Title"] = "Bài viết của tôi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="heading-section ftco-animate text-center mb-5">
                <h2>Danh Sách Bài Viết</h2>
            </div>

            @if (Model != null)
            { 
                <div class="row">
                    @foreach (var i in Model)
                    { 
                        <div class="col-md-6"> 
                            <div class="card mb-4 shadow ftco-animate fade-up">
                                <div class="card-header bg-primary text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h3 class="mb-0">@ViewBag.UserName</h3>
                                        <div>
                                            <span class="mr-3"><i class="far fa-calendar-alt"></i> @i.NgayDang.ToString("dd/MM/yyyy")</span>
                                            <span><i class="fas fa-check-circle"></i> @(i.active ? "Đã duyệt" : "Chờ duyệt")</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    @{
                                        var anhdau = i.AnhTimNguois?.FirstOrDefault();
                                    }
                                    <div class="card-image mb-3" style="height: 200px; overflow: hidden;">
                                        @if(anhdau != null)
                                        {
                                            <img src="@anhdau.HinhAnh" class="w-100 h-100" style="object-fit: cover;" alt="Hình ảnh bài viết" />
                                        }
                                        else
                                        {
                                            <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center">
                                                <i class="fas fa-image fa-3x text-muted"></i>
                                            </div>
                                        }
                                    </div>
                            
                                    <h5 class="card-title">@i.TieuDe</h5> 
                                    <a href="/TimNguoi/ChiTietBaiTimNguoi?id=@i.Id" class="btn btn-info">Xem chi tiết</a>
                                    <a href="/TimNguoi/CapNhatBaiViet?id=@i.Id" class="btn btn-warning">Chỉnh sửa</a>
                                </div> 
                            </div> 
                        </div> 
                    } 
                </div> 
            } 
            else 
            { 
                <div class="text-center py-5">
                    <i class="fas fa-file-alt fa-4x text-muted mb-3"></i>
                    <p class="text-muted">Bạn chưa có bài viết tìm người nào.</p>
                </div> 
            } 
        </div>
    </div>
</div>