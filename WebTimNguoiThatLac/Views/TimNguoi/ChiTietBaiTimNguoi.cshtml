@section Scripts {
    @if (TempData["FileContents"] != null)
    {
        <script>
            $(document).ready(function() {
                window.open('@Url.Action("DownloadFile", "TimNguoi")', '_blank');
            });
        </script>
    }

    @if (TempData["GuiNhanChungThanhCong"] != null)
    {
        <script>
            $(document).ready(function() {
                showNotification1('success', '@Html.Raw(Json.Serialize(TempData["GuiNhanChungThanhCong"].ToString()))');
            });

            function showNotification1(type, message) {
                const notificationArea = document.getElementById('notification-area');
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.innerHTML = `
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} me-2"></i>
                    ${message}
                `;
                notificationArea.appendChild(notification);
                setTimeout(() => notification.remove(), 5000);
            }
        </script>
    }

    <script>
        // Hàm xử lý xóa bình luận
        function XacNhanXoaBinhLuan(id) {
            $.ajax({
                type: "POST",
                url: "/TimNguoi/XoaBinhLuan",
                data: { id: id },
                success: function(response) {
                    if (response.success) {
                        $("#comment-" + id).remove();
                        showNotification('success', 'Đã xóa bình luận thành công!');
                    } else {
                        showNotification('error', 'Có lỗi xảy ra khi xóa bình luận');
                    }
                },
                error: function() {
                    showNotification('error', 'Lỗi kết nối đến server');
                }
            });
        }

        // Hàm xem trước hình ảnh báo cáo
        function previewReportImage(input) {
            const preview = document.getElementById('reportPostImagePreview');
            const previewContainer = document.querySelector('.image-preview-container');
            const clearBtn = document.querySelector('.image-preview-container button');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    previewContainer.style.display = 'block';
                    clearBtn.style.display = 'block';
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        // Hàm xóa hình ảnh báo cáo
        function clearReportImage() {
            const input = document.getElementById('reportPostImage');
            const preview = document.getElementById('reportPostImagePreview');
            const previewContainer = document.querySelector('.image-preview-container');
            const clearBtn = document.querySelector('.image-preview-container button');

            input.value = '';
            preview.src = '';
            preview.style.display = 'none';
            clearBtn.style.display = 'none';
        }

        // Notification Function
        function showNotification(type, message) {
            const notificationArea = document.getElementById('notification-area');
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.innerHTML = `
                <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} me-2"></i>
                ${message}
            `;
            notificationArea.appendChild(notification);
            setTimeout(() => notification.remove(), 5000);
        }

        // Image Functions
        function zoomImage() {
            const mainImg = document.getElementById('mainImage');
            if (mainImg) mainImg.classList.toggle('zoomed');
        }

        function downloadImage(imageUrl) {
            if (!imageUrl) return;
            const link = document.createElement('a');
            link.href = imageUrl;
            link.download = 'hinh-anh-nguoi-mat-tich.jpg';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        function changeMainImage(src) {
            const mainImg = document.getElementById('mainImage');
            if (mainImg) {
                mainImg.classList.remove('zoomed');
                mainImg.style.opacity = 0;
                setTimeout(() => {
                    mainImg.src = src;
                    mainImg.style.opacity = 1;
                }, 300);
            }
        }

        function showImageModal(src) {
            const modal = new bootstrap.Modal(document.getElementById('imageModal'));
            document.getElementById('modalImage').src = src;
            modal.show();
        }

        // Comments Toggle
        document.getElementById('toggleCommentsBtn')?.addEventListener('click', function() {
            const commentSection = document.getElementById('commentSection');
            if (commentSection) {
                commentSection.classList.toggle('d-none');
                this.innerHTML = commentSection.classList.contains('d-none')
                    ? '<i class="fas fa-comment me-1"></i> Xem bình luận'
                    : '<i class="fas fa-eye-slash me-1"></i> Ẩn bình luận';
            }
        });

        // Report Handling
        document.addEventListener('DOMContentLoaded', function() {
            // Setup report buttons
            document.getElementById('submitReportPost')?.addEventListener('click', submitPostReport);
            document.getElementById('submitReportComment')?.addEventListener('click', submitCommentReport);

            document.querySelectorAll('.report-comment-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.getElementById('reportCommentId').value = this.getAttribute('data-comment-id');
                });
            });

            // Scroll to comments if hash present
            if (window.location.hash === '#comments') {
                const commentSection = document.getElementById('commentSection');
                const toggleBtn = document.getElementById('toggleCommentsBtn');
                if (commentSection && toggleBtn) {
                    commentSection.classList.remove('d-none');
                    toggleBtn.innerHTML = '<i class="fas fa-eye-slash me-1"></i> Ẩn bình luận';
                    setTimeout(() => commentSection.scrollIntoView({ behavior: 'smooth' }), 100);
                }
            }
        });

        
         function submitPostReport() {
            const submitBtn = document.getElementById('submitReportPost');
            const submitText = submitBtn.querySelector('.submit-text');
            const spinner = submitBtn.querySelector('.loading-spinner');

            submitText.classList.add('d-none');
            spinner.classList.remove('d-none');
            submitBtn.disabled = true;

            const formData = new FormData();
            formData.append('MaBaiViet', document.getElementById('reportPostId').value);
            formData.append('LyDo', document.getElementById('reportPostReason').value);
            formData.append('ChiTiet', document.getElementById('reportPostDetails').value);

            const imageFile = document.getElementById('reportPostImage').files[0];
            if (imageFile) formData.append('HinhAnhBaoCaoBaiViet', imageFile);

            // Sử dụng AJAX thay vì Fetch API
            $.ajax({
                url: '/TimNguoi/BaoCaoBaiViet',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(data) {
                    showNotification('success', data.message || 'Báo cáo đã được gửi thành công!');

                    // Đóng modal - cách tương thích với mọi phiên bản Bootstrap
                    $('#reportPostModal').modal('hide');

                    // Reset form
                    document.getElementById('reportPostReason').value = '';
                    document.getElementById('reportPostDetails').value = '';
                    document.getElementById('reportPostImage').value = '';
                    clearReportImage();
                },
                error: function(xhr, status, error) {
                    let errorMsg = 'Có lỗi xảy ra khi gửi báo cáo';
                    try {
                        const response = JSON.parse(xhr.responseText);
                        errorMsg = response.message || errorMsg;
                    } catch (e) {
                        errorMsg = xhr.responseText || errorMsg;
                    }
                    showNotification('error', errorMsg);
                },
                complete: function() {
                    submitText.classList.remove('d-none');
                    spinner.classList.add('d-none');
                    submitBtn.disabled = false;
                }
            });
        }

        function submitCommentReport() {
            const submitBtn = document.getElementById('submitReportComment');
            const submitText = submitBtn.querySelector('.submit-text');
            const spinner = submitBtn.querySelector('.loading-spinner');

            submitText.classList.add('d-none');
            spinner.classList.remove('d-none');
            submitBtn.disabled = true;

            const formData = new FormData();
            formData.append('MaBinhLuan', document.getElementById('reportCommentId').value);
            formData.append('LyDo', document.getElementById('reportCommentReason').value);

            // Sử dụng AJAX thay vì Fetch API
            $.ajax({
                url: '/TimNguoi/BaoCaoBinhLuan',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(data) {
                    if (data.success) {
                        showNotification('success', data.message || 'Báo cáo bình luận đã được gửi!');
                        $('#reportCommentModal').modal('hide');
                        document.getElementById('reportCommentReason').value = '';
                    } else {
                        showNotification('error', data.message || 'Có lỗi xảy ra khi gửi báo cáo');
                    }
                },
                error: function(xhr, status, error) {
                    let errorMsg = 'Có lỗi xảy ra khi gửi báo cáo';
                    try {
                        const response = JSON.parse(xhr.responseText);
                        errorMsg = response.message || errorMsg;
                    } catch (e) {
                        errorMsg = xhr.responseText || errorMsg;
                    }
                    showNotification('error', errorMsg);
                },
                complete: function() {
                    submitText.classList.remove('d-none');
                    spinner.classList.add('d-none');
                    submitBtn.disabled = false;
                }
            });
        }
    </script>

    
}