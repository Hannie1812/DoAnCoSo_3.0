@{
    ViewData["Title"] = "Test";
    int sl = 16;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<form action="/Home">
    <nav class="mb-3">
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-ghe-tab" data-bs-toggle="tab" data-bs-target="#nav-ghe" type="button" role="tab" aria-controls="nav-ghe" aria-selected="true">
                <i class="bi bi-grid-3x3-gap-fill"></i> Vị trí ghế
            </button>
            <button class="nav-link" id="nav-diem-tab" data-bs-toggle="tab" data-bs-target="#nav-diem" type="button" role="tab" aria-controls="nav-diem" aria-selected="false">
                <i class="bi bi-geo-alt-fill"></i> Điểm đón/trả
            </button>
        </div>
    </nav>

    <div class="tab-content" id="nav-tabContent">
        <!-- Tab 1: Chọn ghế -->
        <div class="tab-pane fade show active" id="nav-ghe" role="tabpanel" aria-labelledby="nav-ghe-tab" tabindex="0">
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-grid-fill"></i> Chọn vị trí ghế
                </div>
                <div class="card-body">
                    <div class="row">
                        @for (int i = 0; i < sl; i++)
                        {
                            <div class="col-3 mb-2 text-center">
                                <input type="checkbox" class="btn-check" id="ghe-@i" name="SoGhe" value="@i" />
                                <label class="btn btn-outline-success w-100" for="ghe-@i">
                                    Ghế @i
                                </label>
                            </div>
                        }
                    </div>
                    <div class="mt-3">
                        <span class="badge bg-secondary"><i class="bi bi-x-circle-fill"></i> Ghế không bán</span>
                        <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Đang chọn</span>
                        <span class="badge bg-light border"><i class="bi bi-circle"></i> Còn trống</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tab 2: Điểm đón/trả -->
        <div class="tab-pane fade" id="nav-diem" role="tabpanel" aria-labelledby="nav-diem-tab" tabindex="0">
            <div class="row">
                <div class="col-md-6">
                    <div class="card border-primary mb-3">
                        <div class="card-header bg-primary text-white">
                            <i class="bi bi-signpost"></i> Điểm đón
                        </div>
                        <div class="card-body">
                            @for (int i = 0; i < 4; i++)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="diemDi" id="diem-di-@i" />
                                    <label class="form-check-label" for="diem-di-@i">Điểm đón @i</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-primary mb-3">
                        <div class="card-header bg-primary text-white">
                            <i class="bi bi-flag-fill"></i> Điểm trả
                        </div>
                        <div class="card-body">
                            @for (int i = 0; i < 4; i++)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="diemDen" id="diem-den-@i" />
                                    <label class="form-check-label" for="diem-den-@i">Điểm trả @i</label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mt-4">
                <a class="btn btn-outline-secondary" data-bs-toggle="tab" href="#nav-ghe"><i class="bi bi-arrow-left"></i> Quay lại</a>
                <button type="submit" class="btn btn-primary"><i class="bi bi-check2-circle"></i> Ghi nhận</button>
            </div>
        </div>
    </div>
</form>
