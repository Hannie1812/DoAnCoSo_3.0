@model IEnumerable<WebTimNguoiThatLac.Models.TinTuc>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                <h2 class="mb-4">Tin Tức Gần Đây</h2>
                <p>Trang web mất tích cập nhật thông tin về các vụ mất tích, tìm kiếm người thân, và chia sẻ câu chuyện cảm động của những gia đình đang tìm kiếm hy vọng</p>
            </div>
        </div>
        <div class="row d-flex">

            @if (Model != null)
            {
                <div class="owl-carousel" id="carouselTinTuc">
                    @foreach (var i in Model)
                    {
                        <div class="item">
                            <div class=" d-flex ftco-animate">
                                <div class="blog-entry align-self-stretch">
                                    <a href="/TinTuc/Details?id=@i.Id" class="block-20" style="background-image: url('@i.HinhAnh');">
                                    </a>
                                    <div class="text p-4 d-block">
                                        <div class="meta mb-3">
                                            <div><a href="/TinTuc/Details?id=@i.Id">@i.NgayDang</a></div>
                                            <div><a href="/TinTuc/Details?id=@i.Id" class="meta-chat"><span class="icon-chat"></span></a></div>
                                            <div><a href="/TinTuc/Details?id=@i.Id">@i.TacGia</a></div>
                                        </div>
                                        <h3 class="heading mt-3"><a href="/TinTuc/Details?id=@i.Id">@i.TieuDe</a></h3>
                                        <p>@i.MoTaNgan</p>
                                    </div>
                                </div>
                            </div>
                        </div>               
                    }
                </div>
            }
            else
            {
                <h2>Không có Tin Tức nào để hiển thị.</h2>
            }
           
        </div>
    </div>
</section>