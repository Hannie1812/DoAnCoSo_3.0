                            <div class="org-links">
                                <a href="https://timnguothan.com" target="_blank" class="org-link">
                                    <i class="fas fa-external-link-alt"></i> Tìm Người Thân
                                </a>
                                <a href="https://www.facebook.com/timnguoilac" target="_blank" class="org-link">
                                    <i class="fas fa-external-link-alt"></i> Cộng đồng Tìm Người Lạc
                                </a>
                            </div>
                        </div>

                        <!-- Local Support -->
                        <div class="organization-card">
                            <div class="org-icon">
                                <i class="fas fa-hands"></i>
                            </div>
                            <h5>Hỗ Trợ Địa Phương</h5>
                            <div class="org-links">
                                <a href="tel:0776117577" class="org-link">
                                    <i class="fas fa-phone"></i> Đường dây nóng Biên Hòa
                                </a>
                                <a href="https://www.facebook.com/groups/hoitrobiendong" target="_blank" class="org-link">
                                    <i class="fas fa-external-link-alt"></i> Hội Tương Thân Đồng Nai
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

