@model WebTimNguoiThatLac.Models.ApplicationUser


@{
    ViewData["Title"] = "Cập Nhật Thông Tin Tài Khoản";
}

@section naviHeader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin" class="nav-link ">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/NguoiDung" class="nav-link active">Người Dùng</a>
        </li>
    </ul>
}


<form asp-area="Admin" asp-controller="NguoiDung" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="card container-fluid ">
        <div class="card-header d-flex ">
            <h2 class="card-title">Chi Tiết @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" type="text" class="form-control" placeholder="Nhập Email ">
                        <span asp-validation-for="FullName"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CCCD">CCCD</label>
                        <input asp-for="CCCD" type="text" class="form-control" placeholder="Nhập CCCD">
                        <span asp-validation-for="CCCD"></span>
                    </div>
                   
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="FullName">Họ tên</label>
                        <input asp-for="FullName" type="text" class="form-control" placeholder="Nhập Tên ">
                        <span asp-validation-for="FullName"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Address">Địa chỉ</label>
                        <input asp-for="Address" type="text" class="form-control" placeholder="Nhập Địa chỉ">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="PhoneNumber">Địa Chỉ</label>
                        <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Nhập SDT">
                    </div>
                    <div class="col-md-6">
                        <label asp-for="NgaySinh">Ngày Sinh</label>
                        <input class="form-control" asp-for="NgaySinh" type="datetime-local"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label >Loại tài khoản</label>
                        <select name="LoaiTaiKhoan" class="form-control"  asp-items="ViewBag.DanhSachRole">
                            <option value="">-- Hãy Chọn Role --</option>
                            @foreach (var x in ViewBag.DanhSachRole)
                            {
                                if (ViewBag.RoleHienTai != null)
                                {
                                    if (x.Value == ViewBag.RoleHienTai)
                                    {
                                        <option value="@x.Value" selected>@x.Value</option>
                                    }
                                    else
                                    {
                                        <option value="@x.Value">@x.Value</option>
                                    }
                                   
                                }
                                else
                                {
                                    <option value="@x.Value">@x.Value</option>
                                }

                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class=" mb-3">
                <input asp-for="Active" type="checkbox">
                <span>Hoạt động</span>
            </div>
            <div class=" mb-3">
                <a class="btn btn-primary" href="/Admin/NguoiDung">Thoát</a>
                <button class="btn btn-success">Cập Nhật</button>
            </div>
        </div>
        <div class="card-footer">
        </div>
    </div>
</form>

@section Scripts {
    <script>

    </script>
}
