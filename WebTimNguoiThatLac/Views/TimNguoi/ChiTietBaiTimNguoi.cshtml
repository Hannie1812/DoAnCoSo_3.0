<div class="missing-person-container">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <ol class="breadcrumb bg-transparent px-0">
            <li class="breadcrumb-item"><a href="/" class="text-decoration-none"><i class="fas fa-home me-1"></i>Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="/TimNguoi" class="text-decoration-none"><i class="fas fa-search me-1"></i>Bài tìm người</a></li>
            <li class="breadcrumb-item active" aria-current="page"><i class="fas fa-user me-1"></i>@Model?.HoTen</li>
        </ol>
    </nav>

    @if (Model == null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle me-2"></i>Không tìm thấy bài viết
        </div>
    }
    else
    {
        <!-- Main Content Row -->
        <div class="row">
            <!-- Image Column -->
            <div class="col-lg-6">
                <!-- Main Image -->
                <div class="image-main-container">
                    @if (daidien != null)
                    {
                        <img id="mainImage" src="@daidien.HinhAnh" class="main-image" alt="Ảnh đại diện của @Model.HoTen" loading="lazy">
                    }
                    else
                    {
                        <i class="fas fa-user-circle default-avatar" style="font-size: 8rem; color: #ced4da;"></i>
                    }

                    <div class="image-actions">
                        <button class="image-action-btn" onclick="zoomImage()">
                            <i class="fas fa-search-plus"></i>
                        </button>
                        @if (daidien != null)
                        {
                            <button class="image-action-btn" onclick="downloadImage('@daidien.HinhAnh')">
                                <i class="fas fa-download"></i>
                            </button>
                        }
                    </div>
                </div>

                <!-- Image Gallery -->
                @if (dsHinhAnh.Any())
                {
                    <div class="gallery-container">
                        <div class="gallery-header">
                            <h6 class="mb-0 fw-bold">
                                <i class="fas fa-images me-2 text-primary"></i>Hình ảnh liên quan
                            </h6>
                            <small class="text-muted">@dsHinhAnh.Count ảnh</small>
                        </div>

                        <div class="gallery-scroll">
                            @foreach (var img in dsHinhAnh)
                            {
                                <div class="gallery-item">
                                    <div class="position-relative">
                                        <img src="@img.HinhAnh"
                                        class="gallery-thumbnail"
                                        onclick="changeMainImage('@img.HinhAnh')"
                                        alt="Ảnh liên quan"
                                        loading="lazy">
                                        @if (img.TrangThai == 1)
                                        {
                                            <span class="badge bg-success rounded-circle p-1" style="position: absolute; top: -5px; right: -5px;">
                                                <i class="fas fa-check"></i>
                                            </span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Info Column -->
            <div class="col-lg-6">
                <div class="info-basic-container">
                    <div class="info-header">
                        <h1 class="info-title">
                            <i class="fas fa-search me-2"></i>@ViewBag.NguoiTim Tìm @Model.HoTen
                        </h1>
                        <span class="status-badge @(Model.TrangThai == "Đang Tìm Kiếm" ? "status-searching" : Model.TrangThai == "Đã Tìm Thấy" ? "status-found" : "status-other")">
                            <i class="fas @(Model.TrangThai == "Đang Tìm Kiếm" ? "fa-search" : Model.TrangThai == "Đã Tìm Thấy" ? "fa-check-circle" : "fa-question-circle") me-1"></i>@Model.TrangThai
                        </span>
                    </div>

                    <!-- Basic Info Grid -->
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-user-tag"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Họ và tên</div>
                                <div class="info-value">@Model.HoTen</div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Khu vực</div>
                                <div class="info-value">@Model.KhuVuc</div>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                @if (Model.GioiTinh == 1)
                                {
                                    <i class="fas fa-mars"></i>
                                }
                                else if (Model.GioiTinh == 2)
                                {
                                    <i class="fas fa-venus"></i>
                                }
                                else
                                {
                                    <i class="fas fa-genderless"></i>
                                }
                            </div>
                            <div class="info-content">
                                <div class="info-label">Giới tính</div>
                                <div class="info-value">
                                    @switch (Model.GioiTinh)
                                    {
                                        case 1:
                                            <span>Nam</span>
                                            ; break;
                                        case 2:
                                            <span>Nữ</span>
                                            ; break;
                                        default:
                                            <span>Khác</span>
                                            ; break;
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-calendar-day"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Ngày đăng bài</div>
                                <div class="info-value">@Model.NgayDang.ToString("dd/MM/yyyy")</div>
                                <small class="text-muted">
                                    <i class="far fa-clock me-1"></i>
                                    @(Math.Abs((DateTime.Now - Model.NgayDang).TotalDays).ToString("0")) ngày trước
                                </small>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="info-icon">
                                <i class="fas fa-calendar-day"></i>
                            </div>
                            <div class="info-content">
                                <div class="info-label">Ngày mất tích</div>
                                <div class="info-value">@Model.NgayMatTich?.ToString("dd/MM/yyyy")</div>
                                <small class="text-muted">
                                    @if (Model.NgayMatTich == null)
                                    {
                                        <span class="text-danger">Chưa xác định</span>
                                    }
                                    else
                                    {
                                        <span class="">
                                            @(Math.Abs((DateTime.Now - Model.NgayMatTich.Value).TotalDays).ToString("0")) ngày trước
                                        </span>
                                    }
                                </small>
                            </div>
                        </div>
                        @if (Model.TrangThai == "Đã Tìm Thấy")
                        {
							List<TimThayNguoiThatLac> dsTimThay = db
                                    .TimThayNguoiThatLacs
                                    .Where(m => m.TimNguoiId == Model.Id)
                                    .OrderByDescending(z => z.Id)
                                    .ToList();
							if (dsTimThay.Count == 0)
							{
								 var timThay = dsTimThay.FirstOrDefault();
                                <div class="info-item">
                                    <div class="info-icon">
                                        <i class="fas fa-calendar-day"></i>
                                    </div>
                                    <div class="info-content">
                                        <div class="info-label">Ngày tìm thấy</div>
                                        <div class="info-value">@timThay.NgayTimThay?.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">
                                            @if (@timThay.NgayTimThay == null)
                                            {
                                                <span class="text-danger">Chưa xác định</span>
                                            }
                                            else
                                            {
                                                <span class="">
                                                    @(Math.Abs((DateTime.Now - @timThay.NgayTimThay.Value).TotalDays).ToString("0")) ngày trước
                                                </span>
                                            }
                                        </small>
                                    </div>
                                </div>

							}
                        }

                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        @if (isAuthor || user.IsAdmin)
                        {
                            <a href="/TimNguoi/CapNhatBaiViet?id=@Model.Id" class="btn btn-primary">
                                <i class="fas fa-edit"></i> Chỉnh sửa
                            </a>

                            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#confirmFoundModal">
                                <i class="fas fa-check-circle"></i> Xác nhận đã thấy
                            </button>

                            <a asp-action="Index" asp-controller="NhanChung" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-user-friends"></i> Nhân chứng
                            </a>
                        }

                        @if (!isAuthor && user != null)
                        {
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#reportPostModal">
                                <i class="fas fa-flag"></i> Báo cáo
                            </button>

                            <a href="@Url.Action("BatDauChat", "Chat", new { nguoiNhanId = Model.IdNguoiDung })"
                               class="btn btn-success">
                                <i class="fas fa-comment"></i> Liên hệ
                            </a>
                        }

                        @if (idAdmin != null && user != null && user.IsAdmin == false)
                        {
                            <a href="@Url.Action("BatDauChat", "Chat", new { nguoiNhanId = idAdmin })"
                               class="btn btn-outline-primary">
                                <i class="fas fa-headset"></i> Liên hệ Admin
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Identification Section -->
        <div class="description-section mt-4">
            <h5 class="section-title">
                <div class="info-icon me-3">
                    <i class="fas fa-id-card"></i>
                </div> Đặc Điểm Nhận Dạng
            </h5>
            <div class="info-item">
                <div class="info-content">
                    <div class="description-container">
                        <div class="info-value">@Model.DaciemNhanDang</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detailed Description -->
        <div class="description-section">
            <h5 class="section-title">
                <div class="info-icon me-3">
                    <i class="fas fa-info-circle text-primary"></i>
                </div> Thông Tin Chi Tiết
            </h5>
            <div class="info-content">
                <div class="description-container">
                    <div class="info-value">
                        @Html.Raw(Model.MoTa)
                    </div>
                </div>
            </div>
        </div>

        <!-- Comments Section -->
        <div class="comments-card bg-white rounded-3 shadow-sm mb-4 border">
            <div class="comments-header p-4 border-bottom bg-light rounded-top">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="comments-title mb-0 text-primary">
                        <i class="far fa-comments me-2"></i>Bình luận
                        <span class="badge bg-primary ms-2">@dsBinhLuan.Count</span>
                    </h3>
                    <button id="toggleCommentsBtn" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-comment me-1"></i> Xem bình luận
                    </button>
                </div>
            </div>

            <!-- Comment Form -->
            <div class="comment-form p-4 border-bottom">
                <form id="commentForm" asp-action="ThemBinhLuan" asp-controller="TimNguoi" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="IdBaiViet" value="@Model.Id" />
                    <input type="hidden" name="UserId" value="@userId" />

                    <div class="form-floating mb-3">
